{% extends 'base.html.twig' %}

{% block title %}Advert list{% endblock %}

{% block body %}
    <div class="container">
        <h1>Advert list <span class="badge">{{ pagination.getTotalItemCount }}</span> <a href="" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add</a></h1>

        <div class="row">
            {# adverts list #}
            {% for advert in pagination %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>#{{ advert.id }} - {{ advert.name }}</h3>
                            <p>Price: {{ advert.price }} {{ 'form.currency'|trans({},'form') }}</p>
                            <p>Description: {{ advert.description }}</p>
                            <p>Author: {{ advert.user.username }}</p>
                            <p>
                                <a href="{{ path("advert_edit", { 'id': advert.id }) }}" class="btn btn-success" role="button">Edit</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {# display navigation #}
            <div class="col-lg-12">
                <div class="navigation pull-right">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
