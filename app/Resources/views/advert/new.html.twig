{% endblock %}

{% block body %}
    <div class="container">
        <h1>Advert creation</h1>
        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.description) }}

        <div class="form-group{% if (not form.documents.vars.compound or force_error|default(false)) and not form.documents.vars.valid %} has-error{% endif %}">
            {{- form_label(form.documents) -}}
            <div class="col-sm-10">
                <div id="advert_documents_uploader"></div>
                {{- form_widget(form.documents) -}}
                {{- form_errors(form.documents) -}}
            </div>
        </div>

        {% form_theme form 'form/bootstrap_3_horizontal_layout_two_cols.html.twig' %}
        <div class="row">
            {{ form_row(form.rentType) }}
            {{ form_row(form.price, {'money_pattern': '{{ widget }} ' ~ 'form.currency'|trans({},'form')}) }}
        </div>
        <div class="row">
            {{ form_row(form.rooms) }}
            {{ form_row(form.square, {'suffix': 'M', 'suffix_sup': '2' }) }}
        </div>
        <div class="row">
            {{ form_row(form.floor) }}
            {{ form_row(form.totalFloor) }}
        </div>
        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

        <div class="form-group{% if (not form.address.vars.compound or force_error|default(false)) and not form.address.vars.valid %} has-error{% endif %}">
            {{- form_label(form.address) -}}
            <div class="col-sm-10">
                {{- form_widget(form.address) -}}
                {{- form_errors(form.address) -}}
                <div id="address_map"></div>
            </div>
        </div>

        {{ form_widget(form.coordsLat) }}
        {{ form_widget(form.coordsLong) }}

        <input class="btn btn-success" type="submit" value="Create" />
        {{ form_end(form) }}

    </div>
{% endblock %}
