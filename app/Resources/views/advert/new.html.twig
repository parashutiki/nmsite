{% extends 'base.html.twig' %}

{% block title %}
    Advert creation
{% endblock %}

{% block qqTemplate %}
    <div class="qq-uploader-selector qq-uploader qq-gallery" qq-drop-area-text="Drop files here">
        <div class="qq-total-progress-bar-container-selector qq-total-progress-bar-container">
            <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-total-progress-bar-selector qq-progress-bar qq-total-progress-bar"></div>
        </div>
        <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone>
            <span class="qq-upload-drop-area-text-selector"></span>
        </div>
        <div class="qq-upload-button-selector qq-upload-button">
            <div class="btn btn-default"><i class="glyphicon glyphicon-picture"></i> Upload a file</div>
        </div>

        <div class="qq-upload-list-selector qq-upload-list row" role="region" aria-live="polite" aria-relevant="additions removals">
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="document-comtainer">
                    <span role="status" class="qq-upload-status-text-selector qq-upload-status-text"></span>
                    <div class="qq-progress-bar-container-selector qq-progress-bar-container">
                        <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
                    </div>
                    <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
                    <div class="qq-thumbnail-wrapper">
                        <a class="preview-link" target="_blank">
                            <img class="qq-thumbnail-selector" qq-max-size="120" qq-server-scale>
                        </a>
                    </div>
                    <button type="button" class="qq-upload-cancel-selector qq-upload-cancel glyphicon glyphicon-stop"></button>
                    <button type="button" class="qq-upload-retry-selector qq-upload-retry">
                        <span class="qq-btn qq-retry-icon glyphicon glyphicon-refresh" aria-label="Retry"></span>
                        Retry
                    </button>

                    <div class="qq-file-info">
                        <input type="hidden" class="advert-unmanagedDocument-uuid" />
                        <span class="qq-upload-size-selector qq-upload-size"></span>
                        <button type="button" class="qq-btn qq-upload-delete-selector qq-upload-delete">
                            <span class="qq-btn qq-delete-icon glyphicon glyphicon-trash" aria-label="Delete"></span>
                        </button>
                        <button type="button" class="qq-btn qq-upload-pause-selector qq-upload-pause">
                            <span class="qq-btn qq-pause-icon glyphicon glyphicon-pause" aria-label="Pause"></span>
                        </button>
                        <button type="button" class="qq-btn qq-upload-continue-selector qq-upload-continue">
                            <span class="qq-btn qq-continue-icon glyphicon glyphicon-play" aria-label="Continue"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <dialog class="qq-alert-dialog-selector">
        <div class="qq-dialog-message-selector"></div>
        <div class="qq-dialog-buttons">
            <button type="button" class="qq-cancel-button-selector">Close</button>
        </div>
    </dialog>

    <dialog class="qq-confirm-dialog-selector">
        <div class="qq-dialog-message-selector"></div>
        <div class="qq-dialog-buttons">
            <button type="button" class="qq-cancel-button-selector">No</button>
            <button type="button" class="qq-ok-button-selector">Yes</button>
        </div>
    </dialog>

    <dialog class="qq-prompt-dialog-selector">
        <div class="qq-dialog-message-selector"></div>
        <input type="text">
        <div class="qq-dialog-buttons">
            <button type="button" class="qq-cancel-button-selector">Cancel</button>
            <button type="button" class="qq-ok-button-selector">Ok</button>
        </div>
    </dialog>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src='http://maps.google.com/maps/api/js?v=3&libraries=places&language={{ app.request.locale }}'></script>
    {% javascripts
        '@fine_uploader_js'
        '@location_picker_js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/template" id="qq-template-s3">
        {{ block('qqTemplate') }}
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var uploader = new qq.FineUploader({
                template: 'qq-template-s3',
                element: document.getElementById('advert_form_new_unmanagedDocuments_uploader'),
                deleteFile: {
                    enabled: true,
                    endpoint: "{{ path('unmanagedDocument_delete') }}"
                },
                request: {
                    endpoint: "{{ oneup_uploader_endpoint('unmanaged') }}"
                },
                callbacks: {
                    onComplete: function (id, name, response) {
                        var fileItem = this.getItemByFileId(id);
                        if (response.success) {
                            $(qq(fileItem).getByClass('advert-unmanagedDocument-uuid')[0])
                                    .attr({
                                        id: 'advert_form_new_unmanagedDocuments___name___uuid'.replace('__name__', id),
                                        name: 'advert_form_new[unmanagedDocuments][__name__][uuid]'.replace('__name__', id),
                                        value: this.getUuid(id)
                                    });
                        }
                    }
                }
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#address_map').locationpicker({
                location: {
                    latitude: 49.84478853877884,
                    longitude: 24.0261287689209
                },
                radius: 10,
                enableAutocomplete: true,
                scrollwheel: false,
                inputBinding: {
                    latitudeInput: $('#advert_coordsLat'),
                    longitudeInput: $('#advert_coordsLong'),
                    locationNameInput: $('#advert_address')
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="panel-group">
            <div class="panel panel-success">
                <div class="panel-heading">Advert creation</div>
                <div class="panel-body">
                    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
                    {{ form_start(form) }}

                    {{ form_row(form.name) }}
                    {{ form_row(form.description) }}

                    <div class="form-group{% if (not form.unmanagedDocuments.vars.compound or force_error|default(false)) and not form.unmanagedDocuments.vars.valid %} has-error{% endif %}">
                        {{- form_label(form.unmanagedDocuments) -}}
                        <div class="col-sm-10">
                            <div id="advert_form_new_unmanagedDocuments_uploader"></div>
                            {{- form_widget(form.unmanagedDocuments) -}}
                            {{- form_errors(form.unmanagedDocuments) -}}
                        </div>
                    </div>

                    {% form_theme form 'form/bootstrap_3_horizontal_layout_two_cols.html.twig' %}
                    <div class="row">
                        {{ form_row(form.rentType) }}
                        {{ form_row(form.price, {'money_pattern': '{{ widget }} ' ~ 'form.currency'|trans({},'form')}) }}
                    </div>
                    <div class="row">
                        {{ form_row(form.rooms) }}
                        {{ form_row(form.square, {'suffix': 'M', 'suffix_sup': '2' }) }}
                    </div>
                    <div class="row">
                        {{ form_row(form.floor) }}
                        {{ form_row(form.totalFloor) }}
                    </div>
                    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

                    <div class="form-group{% if (not form.address.vars.compound or force_error|default(false)) and not form.address.vars.valid %} has-error{% endif %}">
                        {{- form_label(form.address) -}}
                        <div class="col-sm-10">
                            {{- form_widget(form.address) -}}
                            {{- form_errors(form.address) -}}
                            <div id="address_map"></div>
                        </div>
                    </div>

                    {{ form_widget(form.coordsLat) }}
                    {{ form_widget(form.coordsLong) }}

                    {% if not app.user %}
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="form-group">
                                    <h3 class="col-sm-2 control-label">User account</h3>
                                </div>
                            </div>
                        </div>
                        {{ form_widget(form.user) }}
                    {% endif %}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input class="btn btn-success" type="submit" value="Create" />
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
