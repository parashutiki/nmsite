{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>User edit</h1>

        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="flash-notice alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-success pull-left" type="submit" value="Update" />
        {{ form_end(edit_form) }}
        <div class="pull-right">
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>

        <div class="row">
            <div class="col-lg-12">
                <nav class="clear">
                    <ul class="pager">
                        <li class="previous"><a href="{{ path('user_index') }}"><span aria-hidden="true">&larr;</span> Back to the list</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
