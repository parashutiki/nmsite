{% extends 'base.html.twig' %}

{% block title %}User list{% endblock %}

{% block body %}
    <div class="container">
        <h1>User list <span class="badge">{{ pagination.getTotalItemCount }}</span></h1>

        <div class="row">
            {# adverts list #}
            {% for user in pagination %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>{{ user.username }}</h3>
                            <p>Email: {{ user.email }}</p>
                            <p>
                                <a href="{{ path("user_edit", { 'id': user.id }) }}" class="btn btn-success" role="button">Edit</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}

            {# display navigation #}
            <div class="col-lg-12">
                <div class="navigation pull-right">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
