{% spaceless %}
    {% if breadcrumbsArray is defined %}
        <ol class="breadcrumb">
            {% for  link in breadcrumbsArray %}
                {% if loop.index == 1 %}
                    <li><a href="/" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> {{ 'menu.main.home'|trans({},'menu') }}</a></li>
                    {% elseif not loop.last %}
                    <li><a href="{{ link.uri }}">{{ link.label }}</a></li>
                    {% else %}
                    <li class="current">{{ link.label }}</li>
                    {% endif %}
                {% endfor %}
        </ol>
    {% endif %}
{% endspaceless %}