{% trans_default_domain 'FOSUserBundle' %}

<div class="panel-group">
    <div class="panel
         {% spaceless %}
             {% if not form.vars.valid %}
                 panel-danger
             {% else %}
                 panel-default
             {% endif %}
         {% endspaceless %}
         ">
        <div class="panel-heading">
            {% block breadcrumbs %}
                {% set breadcrumbsArray = [
                    {'uri': path('homepage'), 'label': 'menu.main.home'|trans({},'menu')},
                    {'uri': path('fos_user_profile_show'), 'label': form.children.username.vars.value},
                    {'label': block('title')}
                ] %}
                {{ include('breadcrumbs.html.twig') }}
            {% endblock %}
        </div>
        <div class="panel-body">
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            {% form_theme form 'form/bootstrap_3_horizontal_layout_two_cols.html.twig' %}
            <div class="row">
                {{ form_row(form.name) }}
                {{ form_row(form.phone) }}
            </div>
            <div class="row">
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
            </div>
            <div class="row">
                {{ form_row(form.current_password) }}
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input class="btn btn-success" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
